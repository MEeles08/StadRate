<%- include("partials/header") %>

<div class="container">
    <!-- Display jumbotron -->
    <div class="jumbotron">
        <h2 class="display-4">Admin page</h2>
        <p class="lead"> View all users and their information</p>
        <hr class="my4">
        <% count = 0; %>
        <%users.forEach(function(user){ %>
            <% count++ %>
        <%}) %>
        <p>Total amount of users: <%- count %></p>
    </div>


    <!-- Display each user info in card shape -->
    <div class="row center text-center d-none d-md-none d-lg-block d-xl-block " style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12 col-md-12 col-sm-8 col-xs-12">
            <div class="card-group ">
                <% users.forEach(function(user){ %>
                    
                    <div class="col-md-3 col-sm-6">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h5 class="card-title"><%= user.username %></h5>
                                <h5 class="card-title">Paid: <%= user.isPaid %></h5>
                                <h5 class="card-title">Admin: <%= user.isAdmin %></h5>
                                <h5 class="card-title">no of posts:</h5>
                            </div>
                            <p>
                                <a href="/profile/<%= user._id %>" class="btn btn-primary">View user</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div> 
    </div> 
<!-- close container -->
</div> 

<%- include("partials/footer") %>