<%- include("../partials/header") %>


<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
		<h1 style="text-align: center;">Edit <%= stadium.name %> stadium</h1>

			<form action="/stadiums/<%= stadium._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[name]" value="<%= stadium.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="stadium[price]" value="<%= stadium.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[image]" value="<%= stadium.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="stadium[description]" value="<%= stadium.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/stadiums">Go Back</a>
		</div>
	</div>


	

</div>
<%- include("../partials/footer") %>