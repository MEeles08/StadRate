<%- include("../partials/header") %>

<div class="container h-100">




    <div class="row col-auto ">
        <div style="width: 30%; margin: 35px auto;">
            <h1 style="text-align: center;">Create a new stadium</h1>
            <form action="/Stadiums" method="POST">
                <div class="form-group">
                    <input class="form-control text-center" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control text-center" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
					<input class="form-control text-center" type="text" name="image" placeholder="image URL">
				</div>
				<div class="form-group ">
					<input class="form-control text-center" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Submit!</button>
				</div>
            </form>
            <a href="/stadiums">Go Back</a>
        </div>
    </div>
</div>









<style>
@media (max-width: 414px) {  
    form {
        width: 200%;
    }
} 

</style> 


