<%- include("partials/header") %>

<div class="container h-100">
<!-- login form -->
    <div class="row col-auto ">
        <div style="width: 30%; margin: 35px auto;">
            <h1 style="text-align: center;">Login</h1>
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control text-center" type="text" name="username" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control text-center" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Login!</button>
                </div>
            </form>
            <p>Don't have an account? <a href="/register">Register</a></p>
        </div>
    </div>

</div>

<%- include("partials/footer") %>