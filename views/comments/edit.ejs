<%- include("../partials/header") %>

<div class="container h-100">
    <!-- login form -->
        <div class="row col-auto ">
            <div style="width: 30%; margin: 35px auto;">
                <h1 style="text-align: center;">Edit your comment</h1>
                <form action="/stadiums/<%= stadium_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control text-center" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/stadiums">Go Back</a>
            </div>
        </div>
</div>


